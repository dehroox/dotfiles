general {
        colors = true
        interval = 2
}

order += "ethernet _first_"
order += "battery all"
order += "tztime local"
order += "volume master"

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
}

tztime local {
        format = "%Y-%m-%d %I:%M:%S"
}

volume master {
    format = "V: %volume"
    format_muted = "V: muted"
    device = "pulse"
}

